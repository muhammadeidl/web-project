@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login</title>
    <style>
        /*
                ===================================
                1. General Setup & Gradient Background
                ===================================
                */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            height: 100%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #4facfe 75%, #00f2fe 100%) !important;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #4facfe 75%, #00f2fe 100%) !important;
            min-height: 100vh;
            height: 100%;
            color: #e0e0e0;
            font-family: 'Inter', 'Segoe UI', Roboto, sans-serif;
            margin: 0 !important;
            padding: 0 !important;
        }

        h1 {
            color: #ffffff;
            margin-bottom: 2rem;
            font-weight: 700;
            text-align: center;
            letter-spacing: 1px;
            text-shadow: 0 2px 10px rgba(0,0,0,0.5);
        }

        /*
                ===================================
                2. Card and Layout Styling
                ===================================
                */
        .row {
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0 !important;
            padding: 3rem 1rem;
            min-height: 100vh;
            background: transparent !important;
        }

        /* 2.1. Main Login Card */
        .col-md-4 {
            background-color: rgba(20, 20, 20, 0.85);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 1rem;
            padding: 2.5rem;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.6);
            max-width: 450px;
            width: 100%;
        }

        h2 {
            color: #bb86fc;
            font-size: 1.4rem;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            font-weight: 500;
            text-align: center;
        }

        hr {
            display: none;
        }

        /*
                ===================================
                3. Form Elements
                ===================================
                */

        /* Inputs */
        .form-floating {
            position: relative;
            margin-bottom: 1.5rem;
        }

            .form-floating > .form-control {
                background-color: rgba(0, 0, 0, 0.5);
                color: #ffffff;
                border: 1px solid #444;
                border-radius: 0.5rem;
                padding: 1.5rem 0.75rem 0.5rem 0.75rem;
                height: 58px;
            }

            .form-floating > label {
                position: absolute;
                top: 0;
                left: 0;
                padding: 1rem 0.75rem;
                color: #bbb;
                pointer-events: none;
                transform-origin: 0 0;
                transition: opacity 0.1s ease-in-out, transform 0.1s ease-in-out;
            }

            .form-floating > .form-control:focus ~ label,
            .form-floating > .form-control:not(:placeholder-shown) ~ label {
                opacity: 0.65;
                transform: scale(0.85) translateY(-0.5rem) translateX(0.15rem);
            }

            .form-floating > .form-control:focus {
                background-color: rgba(0, 0, 0, 0.8);
                border-color: #bb86fc;
                box-shadow: 0 0 0 0.25rem rgba(187, 134, 252, 0.25);
                color: white;
            }

            /* إصلاح الخلفية البيضاء للملء التلقائي */
            .form-floating > .form-control:-webkit-autofill,
            .form-floating > .form-control:-webkit-autofill:hover,
            .form-floating > .form-control:-webkit-autofill:focus {
                -webkit-text-fill-color: #ffffff !important;
                -webkit-box-shadow: 0 0 0px 1000px #1a1a1a inset !important;
                box-shadow: 0 0 0px 1000px #1a1a1a inset !important;
                transition: background-color 5000s ease-in-out 0s;
            }

        /* Checkbox */
        .checkbox {
            margin-bottom: 1.5rem;
        }

            .checkbox label {
                color: #e0e0e0;
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

        .form-check-input {
            background-color: rgba(0, 0, 0, 0.5);
            border: 1px solid #444;
            width: 1.2rem;
            height: 1.2rem;
        }

            .form-check-input:checked {
                background-color: #bb86fc;
                border-color: #bb86fc;
            }

        /* Buttons */
        #login-submit,
        .btn-primary {
            background-color: #bb86fc !important;
            border-color: #bb86fc !important;
            color: #000000 !important;
            font-weight: 700;
            letter-spacing: 0.5px;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
            padding: 12px;
            margin-bottom: 1.5rem;
            width: 100%;
            font-size: 1.1rem;
        }

            #login-submit:hover,
            .btn-primary:hover {
                background-color: #a370f7 !important;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(187, 134, 252, 0.4);
            }

        /* Links */
        p {
            text-align: center;
            margin-bottom: 10px;
        }

            p a,
            #resend-confirmation,
            #forgot-password {
                color: #03dac6 !important;
                text-decoration: none;
                font-size: 0.9rem;
                transition: color 0.15s;
            }

                p a:hover,
                #resend-confirmation:hover,
                #forgot-password:hover {
                    color: #01a396 !important;
                    text-decoration: underline;
                }

        /* Validation */
        .text-danger {
            font-size: 0.85rem;
            color: #ff5252 !important;
        }

        /* التأكد من عدم وجود أي خلفية بيضاء */
        div, section, form {
            background: transparent !important;
        }

        .col-md-4 {
            background-color: rgba(20, 20, 20, 0.85) !important;
        }
    </style>
</head>
<body>

    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h2>Use a local account to log in.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder=" " />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder=" " />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
