@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<FitnessCenter.Models.Gym>

<h2 class="text-center mt-4 mb-4 display-6">Gyms</h2>

<div class="d-flex justify-content-between align-items-center mb-4">
    <span class="fw-light text-muted">Manage all Gyms in the system</span>
    <a href="/Gym/Create" class="btn btn-primary shadow-sm rounded-pill px-4">+ Add Gym</a>
</div>

<div class="table-responsive shadow-sm rounded">
    <table class="table table-hover table-striped align-middle border rounded">
        <thead class="bg-primary text-white text-center">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Location</th>
                <th scope="col">Working Hours</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>

        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="4" class="text-center text-muted py-4">
                        No Gym's found. Click "Add Gym" to create a new record.
                    </td>
                </tr>
            }
            else
            {
                @foreach (var gym in Model)
                {
                    <tr class="bg-light">
                        <td class="fw-bold text-nowrap">@gym.Name</td>
                        <td class="text-muted text-nowrap">@gym.Location</td>

                        <!-- Working Hours -->
                        <td>
                            @if (gym.WorkingHours != null && gym.WorkingHours.Any())
                            {
                                <div class="d-flex flex-wrap gap-2">

                                    @foreach (var wh in gym.WorkingHours.OrderBy(w => w.DayOfWeek))
                                    {
                                        <div class="card shadow-sm border-0" style="width: 8rem;">
                                            <div class="card-body text-center p-2">
                                                <h6 class="card-title mb-1">@wh.DayOfWeek</h6>

                                                @if (wh.IsClosed)
                                                {
                                                    <p class="card-text small text-danger fw-bold">
                                                        Closed
                                                    </p>
                                                }
                                                else
                                                {
                                                    <p class="card-text small">
                                                        @(wh.StartTime.HasValue? wh.StartTime.Value.ToString(@"hh\:mm") : "")
                                                        -
                                                        @(wh.EndTime.HasValue? wh.EndTime.Value.ToString(@"hh\:mm") : "")
                                                    </p>
                                                }
                                            </div>
                                        </div>
                                    }

                                </div>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">Not specified</span>
                            }
                        </td>

                        <!-- Actions -->
                        <td class="text-center">
                            <div class="btn-group">
                                <a href="/Gym/Edit/@gym.GymId"
                                   class="btn btn-sm btn-outline-warning rounded-pill">
                                    Edit
                                </a>

                                <button class="btn btn-sm btn-outline-danger rounded-pill"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal"
                                        data-id="@gym.GymId">
                                    Delete
                                </button>
                            </div>
                        </td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body text-center">
                <p class="fs-5">Are you sure you want to delete this gym?</p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>

            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">
                    Cancel
                </button>

                <a href="#" id="confirmDelete" class="btn btn-danger px-4">Delete</a>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const deleteModal = document.getElementById('deleteModal');

        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const gymId = button.getAttribute('data-id');

            const confirmDelete = deleteModal.querySelector('#confirmDelete');
            confirmDelete.href = `/Gym/Delete/${gymId}`;
        });
    });
</script>
