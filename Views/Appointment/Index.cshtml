@using FitnessCenter.Models
@model IEnumerable<FitnessCenter.Models.Appointment>

@{
    ViewData["Title"] = "Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* ====== FORCE GLOBAL GRADIENT (ALWAYS VISIBLE) ====== */
    html, body {
        height: 100%;
        margin: 0;
    }

    body {
        background: transparent !important;
        position: relative;
        min-height: 100vh;
    }

        body::before {
            content: "";
            position: fixed;
            inset: 0;
            z-index: -1;
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364) !important;
        }

    /* ====== MAKE LAYOUT WRAPPERS TRANSPARENT (BOOTSTRAP) ====== */
    main, .container, .container-fluid, .bg-light, .content, .content-wrapper,
    .page-content, .wrapper, #wrapper {
        background: transparent !important;
    }

    /* ====== MAIN CARD ====== */
    .main-container {
        background: linear-gradient(135deg, #ffffff 0%, #f5f8fc 45%, #eaf1fb 100%) !important;
        border-radius: 20px;
        box-shadow: 0 18px 45px rgba(0,0,0,0.28);
        padding: 30px;
        margin-top: 50px;
        border: 1px solid rgba(255,255,255,0.35);
    }

    /* ====== TABLE HEADER ====== */
    .table thead {
        background: linear-gradient(90deg, #111111, #1f1f1f) !important;
        color: #ffc107 !important;
    }

        .table thead th {
            border: none !important;
        }

    /* ====== PROGRAM NAME ====== */
    .program-name {
        color: #222;
        font-weight: 800;
    }

    /* ====== SMALL TAG (date) ====== */
    .info-tag {
        background: linear-gradient(135deg, #ffffff, #f1f4f9) !important;
        border: 1px solid rgba(0,0,0,0.08) !important;
        border-radius: 10px;
        font-size: 0.80rem;
        padding: 7px 10px;
        transition: all 0.2s ease;
        box-shadow: 0 .125rem .25rem rgba(0,0,0,.075);
        white-space: nowrap;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

        .info-tag:hover {
            background: linear-gradient(135deg, #fffbef, #ffffff) !important;
            border-color: #ffc107 !important;
        }

    /* ====== STATUS BADGE ====== */
    .status-badge {
        border-radius: 999px;
        padding: 6px 12px;
        font-size: 0.78rem;
        font-weight: 800;
        display: inline-block;
        border: 1px solid rgba(0,0,0,0.08);
    }

    .status-pending {
        background: #ffc107;
        color: #111;
    }

    .status-confirmed {
        background: #198754;
        color: #fff;
    }

    .status-rejected {
        background: #dc3545;
        color: #fff;
    }

    .status-cancelled {
        background: #6c757d;
        color: #fff;
    }

    .status-done {
        background: #0d6efd;
        color: #fff;
    }

    .status-default {
        background: #6c757d;
        color: #fff;
    }

    /* ====== ADD BUTTON ====== */
    .btn-add {
        background: linear-gradient(135deg, #ffc107, #ffda44) !important;
        border: none !important;
        color: #000 !important;
        font-weight: 800;
    }

    /* Secondary action button */
    .btn-soft {
        background: transparent !important;
        border: 1px solid rgba(255,193,7,0.65) !important;
        color: #b8860b !important;
        font-weight: 800;
    }

        .btn-soft:hover {
            background: rgba(255,193,7,0.12) !important;
            border-color: #ffc107 !important;
            color: #8a6400 !important;
        }
</style>

<div class="container mb-5">
    <div class="main-container">

        <div class="row align-items-center mb-4">
            <div class="col-md-6">
                <h2 class="display-6 fw-bold text-dark m-0">Appointments</h2>
                <p class="text-muted">Manage all appointments in the system</p>
            </div>

            <div class="col-md-6 text-md-end">
                <div class="d-flex justify-content-md-end gap-2 flex-wrap">
                    <a asp-controller="Appointment" asp-action="PendingApprovals"
                       class="btn btn-soft shadow-sm rounded-pill px-4 py-2">
                        <i class="fas fa-hourglass-half me-2"></i>Pending Approvals
                    </a>

                    <a asp-controller="Appointment" asp-action="Create"
                       class="btn btn-add shadow-sm rounded-pill px-4 py-2">
                        <i class="fas fa-plus-circle me-2"></i>+ Add Appointment
                    </a>
                </div>
            </div>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger shadow-sm">@TempData["Error"]</div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success shadow-sm">@TempData["Success"]</div>
        }

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th class="border-0 py-3 ps-4">Training Program</th>
                        <th class="border-0 py-3">Coach</th>
                        <th class="border-0 py-3 text-center">Date &amp; Time</th>
                        <th class="border-0 py-3 text-center">Status</th>
                        <th class="border-0 py-3 text-end pe-4" style="min-width:220px;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <img src="https://cdn-icons-png.flaticon.com/512/747/747310.png"
                                     width="80" class="mb-3 opacity-50" />
                                <p class="text-muted">No appointments found.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var appointment in Model)
                        {
                            string statusClass = appointment.Status switch
                            {
                                AppointmentStatus.Pending => "status-pending",
                                AppointmentStatus.Confirmed => "status-confirmed",
                                AppointmentStatus.Rejected => "status-rejected",
                                AppointmentStatus.Cancelled => "status-cancelled",
                                AppointmentStatus.Done => "status-done",
                                _ => "status-default"
                            };

                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3"
                                             style="width:40px;height:40px;">
                                            <i class="fas fa-dumbbell text-secondary"></i>
                                        </div>
                                        <span class="program-name">@(appointment.TrainingProgram?.Name ?? "N/A")</span>
                                    </div>
                                </td>

                                <td>
                                    <div class="d-flex align-items-center text-muted">
                                        <i class="fas fa-user me-2 text-primary"></i>
                                        @(appointment.Coach?.Name ?? "N/A")
                                    </div>
                                </td>

                                <td class="text-center">
                                    <span class="info-tag">
                                        <i class="fas fa-calendar-alt text-secondary"></i>
                                        @appointment.AppointmentDate.ToString("g")
                                    </span>
                                </td>

                                <td class="text-center">
                                    <span class="status-badge @statusClass">
                                        @AppointmentStatusText.ToText(appointment.Status)
                                    </span>
                                </td>

                                <td class="text-end pe-4">
                                    <div class="btn-group gap-2">
                                        <a asp-controller="Appointment" asp-action="Edit" asp-route-id="@appointment.AppointmentId"
                                           class="btn btn-sm btn-outline-dark rounded-pill px-3">
                                            Edit
                                        </a>

                                        <button type="button"
                                                class="btn btn-sm btn-outline-danger rounded-pill px-3"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteModal"
                                                data-id="@appointment.AppointmentId">
                                            Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>

            </table>
        </div>

    </div>
</div>

<!-- âœ… DELETE MODAL (same as Gyms/Coaches) -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-white border-0">
                <h5 class="modal-title fw-bold">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <i class="fas fa-exclamation-triangle text-danger display-4 mb-3"></i>
                <p class="fs-5">Are you sure you want to delete this appointment?</p>
                <small class="text-muted">This action cannot be undone.</small>
            </div>
            <div class="modal-footer border-0 justify-content-center pb-4">
                <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                <a id="confirmDelete" class="btn btn-danger rounded-pill px-4 shadow-sm">Confirm Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const modal = document.getElementById('deleteModal');
            const confirmBtn = document.getElementById('confirmDelete');

            if (modal && confirmBtn) {
                modal.addEventListener('show.bs.modal', (e) => {
                    const btn = e.relatedTarget;
                    const id = btn.getAttribute('data-id');
                    confirmBtn.href = `/Appointment/Delete/${id}`;
                });
            }
        });
    </script>
}
