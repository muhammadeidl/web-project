@model FitnessCenter.Models.Appointment
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100" style="background: linear-gradient(to bottom, #ff7e5f, #feb47b);">
    <div class="card shadow-lg border-0" style="width: 100%; max-width: 600px; border-radius: 20px; overflow: hidden;">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0">Delete Appointment</h3>
        </div>
        <div class="card-body p-4">
            <div class="alert alert-warning text-center mb-4">
                <strong>Are you sure you want to delete this appointment?</strong>
            </div>
            <dl class="row text-center">
                <dt class="col-sm-4 text-muted">TrainingProgram</dt>
                <dd class="col-sm-8">@Model.TrainingProgram.Name</dd>
                <dt class="col-sm-4 text-muted">Coach</dt>
                <dd class="col-sm-8">@Model.Coach.Name</dd>
                <dt class="col-sm-4 text-muted">Date</dt>
                <dd class="col-sm-8">@Model.AppointmentDate.ToString("f")</dd>
            </dl>
            <form asp-action="Delete" method="post" class="text-center">
                <input type="hidden" asp-for="AppointmentId" />
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-lg text-white" style="background: #d9534f; border: none; border-radius: 30px; padding: 10px 30px;">
                        Delete
                    </button>
                    <a asp-action="Index" class="btn btn-lg text-white" style="background: #5bc0de; border: none; border-radius: 30px; padding: 10px 30px;">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
