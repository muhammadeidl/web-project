@model IEnumerable<FitnessCenter.Models.Coach>
@{
    ViewData["Title"] = "Coaches";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* ====== FORCE GLOBAL GRADIENT (ALWAYS VISIBLE) ====== */
    html, body {
        height: 100%;
        margin: 0;
    }

    body {
        background: transparent !important; /* no use the body background */
        position: relative;
        min-height: 100vh;
    }

        body::before {
            content: "";
            position: fixed;
            inset: 0;
            z-index: -1;
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364) !important;
        }

    /* ====== MAKE LAYOUT WRAPPERS TRANSPARENT (BOOTSTRAP) ====== */
    main,
    .container,
    .container-fluid,
    .bg-light,
    .content,
    .content-wrapper,
    .page-content,
    .wrapper,
    #wrapper {
        background: transparent !important;
    }

    /* ====== MAIN CARD ====== */
    .main-container {
        background: linear-gradient(135deg, #ffffff 0%, #f5f8fc 45%, #eaf1fb 100%) !important;
        border-radius: 20px;
        box-shadow: 0 18px 45px rgba(0,0,0,0.28);
        padding: 30px;
        margin-top: 50px;
        border: 1px solid rgba(255,255,255,0.35);
    }

    /* ====== TABLE HEADER ====== */
    .table thead {
        background: linear-gradient(90deg, #111111, #1f1f1f) !important;
        color: #ffc107 !important;
    }

        .table thead th {
            border: none !important;
        }

    /* ====== EXPERTISE TAG ====== */
    .expertise-tag {
    background: linear-gradient(135deg, #e8f1ff, #d6e4ff);
    color: #0b3a6f;
    font-weight: 600;
    font-size: 0.85rem;
    padding: 6px 14px;
    border-radius: 12px;
    border: 1px solid #b6d0ff;
}









    /* ====== AVAILABILITY BADGE ====== */
    .availability-badge {
        background: linear-gradient(135deg, #ffffff, #f1f4f9) !important;
        border: 1px solid rgba(0,0,0,0.08) !important;
        border-radius: 10px;
        font-size: 0.75rem;
        padding: 7px 10px;
        transition: all 0.2s ease;
    }

        .availability-badge:hover {
            background: linear-gradient(135deg, #fffbef, #ffffff) !important;
            border-color: #ffc107 !important;
        }

    .text-closed {
        color: #dc3545;
        font-weight: 800;
    }

    /* ====== ADD BUTTON ====== */
    .btn-add {
        background: linear-gradient(135deg, #ffc107, #ffda44) !important;
        border: none !important;
        color: #000 !important;
        font-weight: 800;
    }
</style>

<div class="container mb-5">
    <div class="main-container">
        <div class="row align-items-center mb-5">
            <div class="col-md-6">
                <h2 class="display-6 fw-bold text-dark m-0">Coaches</h2>
                <p class="text-muted">Manage your professional trainers team</p>
            </div>
            <div class="col-md-6 text-md-end">
                <a asp-action="Create" class="btn btn-add shadow-sm rounded-pill px-4 py-2">
                    <i class="fas fa-plus-circle me-2"></i>+ Add New Coach
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th class="border-0 py-3 ps-4">Name</th>
                        <th class="border-0 py-3">Expertise</th>
                        <th class="border-0 py-3 text-center">Weekly Availability</th>
                        <th class="border-0 py-3">Gym</th>
                        <th class="border-0 py-3 text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <img src="https://cdn-icons-png.flaticon.com/512/4076/4076549.png" width="80" class="mb-3 opacity-50" />
                                <p class="text-muted">No coaches registered in the system yet.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var coach in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <i class="fas fa-user text-secondary"></i>
                                        </div>
                                        <span class="coach-name">@coach.Name</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="expertise-tag">@coach.Expertise</span>
                                </td>
                                <td>
                                    <div class="d-flex flex-wrap justify-content-center gap-2" style="max-width: 450px; margin: 0 auto;">
                                        @foreach (var av in coach.CoachAvailabilities.OrderBy(a => a.DayOfWeek))
                                        {
                                            <div class="availability-badge shadow-sm">
                                                <span class="fw-bold">@av.DayOfWeek.ToString().Substring(0, 3):</span>
                                                @if (av.IsClosed)
                                                {
                                                    <span class="text-closed">Not Available</span>

                                                }
                                                else
                                                {
                                                    <span>@av.StartTime.Value.ToString(@"hh\:mm") - @av.EndTime.Value.ToString(@"hh\:mm")</span>
                                                }
                                            </div>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center text-muted">
                                        <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                                        @coach.Gym?.Name
                                    </div>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group gap-2">
                                        <a asp-action="Edit" asp-route-id="@coach.CoachId"
                                           class="btn btn-sm btn-outline-dark rounded-pill px-3">
                                            Edit
                                        </a>
                                        <button class="btn btn-sm btn-outline-danger rounded-pill px-3"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteModal"
                                                data-id="@coach.CoachId">
                                            Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-white border-0">
                <h5 class="modal-title fw-bold">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <i class="fas fa-exclamation-triangle text-danger display-4 mb-3"></i>
                <p class="fs-5">Are you sure you want to delete this coach?</p>
                <small class="text-muted">This action cannot be undone.</small>
            </div>
            <div class="modal-footer border-0 justify-content-center pb-4">
                <button class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                <a id="confirmDelete" class="btn btn-danger rounded-pill px-4 shadow-sm">Confirm Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('deleteModal')
                .addEventListener('show.bs.modal', e => {
                    document.getElementById('confirmDelete').href =
                        `/Coach/Delete/${e.relatedTarget.dataset.id}`;
                });
        });
    </script>
}
