@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model FitnessCenter.Models.Coach

<div class="d-flex justify-content-center align-items-start vh-100"
     style="background: linear-gradient(to bottom, #ffecd2, #fcb69f); padding-top: 100px;">

    <div class="card shadow-lg border-0"
         style="width: 100%; max-width: 800px; border-radius: 20px; overflow: hidden;">

        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">Add Coach</h3>
        </div>

        <div class="card-body p-4">
            <form method="post"
                  asp-controller="Coach"
                  asp-action="Create"
                  class="needs-validation"
                  novalidate>

                @Html.AntiForgeryToken()

                <!-- Name -->
                <div class="mb-4">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input type="text" asp-for="Name" class="form-control shadow" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Expertise -->
                <div class="mb-4">
                    <label asp-for="Expertise" class="form-label">Expertise</label>
                    <input type="text" asp-for="Expertise" class="form-control shadow" required />
                    <span asp-validation-for="Expertise" class="text-danger"></span>
                </div>

                <!-- Gym -->
                <div class="mb-4">
                    <label asp-for="GymId" class="form-label">Gym</label>
                    <select asp-for="GymId" class="form-select shadow" asp-items="ViewBag.Gyms">
                        <option value="">-- Select a Gym --</option>
                    </select>
                    <span asp-validation-for="GymId" class="text-danger"></span>
                </div>

                <!-- Availability Section -->
                <h4 class="mb-4 text-secondary">Availability</h4>

                <div class="row">
                    @{
                        var availabilities = Model.CoachAvailabilities?.ToList() ?? new List<FitnessCenter.Models.CoachAvailability>();
                    }
                    @for (int i = 0; i < availabilities.Count; i++)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card border-light shadow-sm h-100">
                                <div class="card-body">
                                    <h5 class="card-title text-primary">
                                        @availabilities[i].DayOfWeek
                                    </h5>

                                    <!-- Hidden DayOfWeek to bind correctly -->
                                    <input type="hidden"
                                           name="CoachAvailabilities[@i].DayOfWeek"
                                           value="@((int)availabilities[i].DayOfWeek)" />

                                    <div class="mb-3">
                                        <label class="form-label">Start Time</label>
                                        <input type="time"
                                               name="CoachAvailabilities[@i].StartTime"
                                               class="form-control shadow" />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">End Time</label>
                                        <input type="time"
                                               name="CoachAvailabilities[@i].EndTime"
                                               class="form-control shadow" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Submit -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-lg btn-primary rounded-pill px-5">
                        Save
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>
