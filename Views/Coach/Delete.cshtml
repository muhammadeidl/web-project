@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model FitnessCenter.Models.Coach

<div class="d-flex justify-content-center align-items-center vh-100"
     style="background: linear-gradient(to bottom, #ff7e5f, #feb47b);">

    <div class="card shadow-lg border-0"
         style="width: 100%; max-width: 600px; border-radius: 20px; overflow: hidden;">

        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0">Delete Coach</h3>
        </div>

        <div class="card-body p-4">
            <div class="alert alert-warning text-center mb-4">
                <strong>Are you sure you want to delete the following coach?</strong>
                <p class="mb-0">This action cannot be undone.</p>
            </div>

            <table class="table table-borderless text-center mb-4">
                <tr>
                    <th class="text-muted">Name</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th class="text-muted">Expertise</th>
                    <td>@Model.Expertise</td>
                </tr>
                <tr>
                    <th class="text-muted">Availability</th>
                    <td>
                        @if (Model.CoachAvailabilities != null && Model.CoachAvailabilities.Any())
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var availability in Model.CoachAvailabilities.OrderBy(a => a.DayOfWeek))
                                {
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>@availability.DayOfWeek</span>
                                        <span>
                                            @(availability.StartTime?.ToString(@"hh\:mm") ?? "")
                                            -
                                            @(availability.EndTime?.ToString(@"hh\:mm") ?? "")

                                        </span>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted fst-italic">Not specified</span>
                        }
                    </td>
                </tr>
                <tr>
                    <th class="text-muted">Gym</th>
                    <td>@Model.Gym?.Name</td>
                </tr>
            </table>

            <form method="post"
                  asp-action="Delete"
                  asp-route-id="@Model.CoachId"
                  class="text-center">
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit"
                            class="btn btn-lg text-white"
                            style="background: #d9534f; border: none; border-radius: 30px; padding: 10px 30px;">
                        Delete
                    </button>
                    <a asp-controller="Coach"
                       asp-action="Index"
                       class="btn btn-lg text-white"
                       style="background: #5bc0de; border: none; border-radius: 30px; padding: 10px 30px;">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
