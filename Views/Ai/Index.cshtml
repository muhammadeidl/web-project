@model FitnessCenter.Models.AiModel

@{
    ViewData["Title"] = "AI Body Architect";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4><i class="fa fa-robot"></i> AI Antrenör</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="post">
                        <div class="mb-3">
                            <label>Yaş</label>
                            <input asp-for="Age" class="form-control" type="number" required />
                        </div>

                        <div class="mb-3">
                            <label>Kilo (kg)</label>
                            <input asp-for="Weight" class="form-control" type="number" required />
                        </div>

                        <div class="mb-3">
                            <label>Boy (cm)</label>
                            <input asp-for="Height" class="form-control" type="number" required />
                        </div>

                        <div class="mb-3">
                            <label>Cinsiyet</label>
                            <select asp-for="Gender" class="form-select">
                                <option value="Erkek">Erkek</option>
                                <option value="Kadın">Kadın</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label>Spor Hedefiniz</label>
                            <input asp-for="Goal"
                                   class="form-control"
                                   placeholder="Örn: Kilo vermek, kas yapmak..."
                                   required />
                        </div>

                        <button type="submit" class="btn btn-success w-100">
                            Planı Al
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            @if (!string.IsNullOrEmpty(Model.AiResponse))
            {
                <div class="card shadow border-success">
                    <div class="card-header bg-success text-white">
                        <h4>Önerilen Planınız</h4>
                    </div>
                    <div class="card-body bg-light">
                        <p style="white-space: pre-line; font-size: 1.1em; line-height: 1.6;">
                            @Model.AiResponse
                        </p>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    Yapay zeka kullanarak anında size özel antrenman ve beslenme planı almak için
                    soldaki bilgilerinizi girin.
                </div>
            }
        </div>
    </div>
</div>
