<!DOCTYPE html>
<html lang="tr">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            color: #000;
            display: flex;
            align-items: center;
            text-transform: uppercase;
        }

            .navbar-brand svg {
                fill: #ffc107;
                margin-right: 8px;
                transform: rotate(-45deg);
            }

        .nav-link {
            transition: color 0.3s ease, background-color 0.3s ease;
        }

            .nav-link:hover {
                color: #f8f9fa !important;
                background-color: #495057;
                border-radius: 5px;
            }

        .btn-outline-light {
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .btn-outline-light:hover {
                background-color: #f8f9fa;
                color: #343a40;
            }

        body, html {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }
    </style>
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark py-3">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24"><path d="M6 5h12v2H6zm0 12h12v2H6zM3 8h18v8H3zm2 2v4h14v-4z" /></svg>
                Iron<span class="text-warning">Fit</span>
            </a>            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Index", "Home")"><i class="fas fa-home me-2"></i>Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Ai")"><i class="fas fa-brain me-2"></i>AI Body Architect</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="btn btn-outline-light" href="@Url.Action("login", "User")"><i class="fas fa-user-lock me-2"></i>Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid p-0" style="background-color:white">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>