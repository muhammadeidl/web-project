@model FitnessCenter.Models.TrainingProgram

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100" style="background: linear-gradient(to bottom, #ff7e5f, #feb47b);">
    <div class="card shadow-lg border-0" style="width: 100%; max-width: 600px; border-radius: 20px; overflow: hidden;">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0">Delete Training Program</h3>
        </div>
        <div class="card-body p-4">
            <div class="alert alert-warning text-center mb-4">
                <strong>Are you sure you want to delete the following Training Program?</strong>
            </div>
            <table class="table table-borderless text-center mb-4">
                <tr>
                    <th class="text-muted">Name</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th class="text-muted">Price</th>
                    <td>@Model.Price.ToString("C")</td>
                </tr>
                <tr>
                    <th class="text-muted">Duration</th>
                    <td>@Model.Duration minutes</td>
                </tr>
                <tr>
                    <th class="text-muted">Gym</th>
                    <td>@Model.Gym.Name</td>
                </tr>
            </table>
            <form method="post" asp-action="Delete" asp-route-id="@Model.TrainingProgramId" class="text-center">
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-lg text-white" style="background: #d9534f; border: none; border-radius: 30px; padding: 10px 30px;">
                        Delete
                    </button>
                    <a href="/TrainingProgram/Index" class="btn btn-lg text-white" style="background: #5bc0de; border: none; border-radius: 30px; padding: 10px 30px;">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
