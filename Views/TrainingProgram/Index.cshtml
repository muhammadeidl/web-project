@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<FitnessCenter.Models.TrainingProgram>

<div class="container py-5" style="background: linear-gradient(to bottom, #ffffff, #e3f2fd);">
    <h2 class="text-center mb-4 display-5 fw-bold text-primary">Training Programs</h2>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <span class="fw-light text-muted">Manage all Training Programs in the system</span>
        <a href="/TrainingProgram/Create" class="btn btn-primary shadow-sm rounded-pill px-4">+ Add Training Program</a>
    </div>

    <div class="table-responsive shadow-sm rounded" style="overflow: hidden;">
        <table class="table table-hover table-bordered align-middle text-center border-light bg-white">
            <thead class="bg-primary text-white">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Duration</th>
                    <th scope="col">Gym</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">No Training Programs found. Click "Add Training Program" to create a new record.</td>
                    </tr>
                }
                else
                {
                    @foreach (var program in Model)
                    {
                        <tr class="align-middle">
                            <td class="fw-bold text-secondary">@program.Name</td>
                            <td>@program.Price.ToString("C")</td>
                            <td>@program.Duration minutes</td>
                            <td>@(string.IsNullOrWhiteSpace(program.Gym?.Name) ? "<span class='text-muted fst-italic'>Not specified</span>" : program.Gym.Name)</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/TrainingProgram/Edit/@program.TrainingProgramId" class="btn btn-sm btn-outline-primary rounded-pill">Edit</a>
                                    <button class="btn btn-sm btn-outline-danger rounded-pill" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@program.TrainingProgramId">Delete</button>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <p class="fs-5 text-secondary">Are you sure you want to delete this program?</p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary px-4 rounded-pill" data-bs-dismiss="modal">Cancel</button>
                <a href="#" id="confirmDelete" class="btn btn-danger px-4 rounded-pill">Delete</a>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const programId = button.getAttribute('data-id');
            const confirmDelete = deleteModal.querySelector('#confirmDelete');
            confirmDelete.href = `/TrainingProgram/Delete/${programId}`;
        });
    });
</script>
