@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IronFit Gym</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
        }


        .hero-section {
            height: 100vh;
            background-image: url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3');
            background-size: cover;
            background-position: center;
            color: white;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

            .hero-section .overlay {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.6);
            }


        .about-us-section .position-relative img {
            width: 100%;
            border-radius: 10px;
        }


        .services-section .card {
            border: none;
            transition: transform 0.3s;
        }

            .services-section .card:hover {
                transform: translateY(-5px);
            }

        .services-section img.card-img-top {
            height: 220px;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .icon {
            margin-top: -60px;
            position: relative;
            z-index: 10;
        }

            .icon img {
                width: 120px;
                height: 120px;
                object-fit: cover;
                border: 5px solid white;
                box-shadow: 0 4px 8px rgba(0,0,0,0.15);
                background-color: white;
            }
    </style>
</head>
<body>

    <section class="hero-section text-light">
        <div class="overlay"></div>
        <div class="container position-relative">
            <h1 class="display-3 fw-bold text-uppercase">Build Your Dream Physique..</h1>
            <p class="lead fs-4 mb-4">Join the city's premier fitness center suitable for all levels.</p>
            <a href="#about" class="btn btn-warning btn-lg text-white fw-bold px-5 rounded-pill">Join Now!</a>
        </div>
    </section>

    <section id="about" class="about-us-section py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 mb-4 mb-md-0">
                    <img src="https://img.freepik.com/premium-photo/man-training-gym_1062339-3.jpg" alt="Fitness Trainer" class="shadow">
                </div>
                <div class="col-md-6">
                    <h2 class="fw-bold mb-4 display-5">About <span class="text-warning">IronFit</span></h2>
                    <p class="mb-4 text-secondary lead">
                        We are dedicated to helping you achieve your fitness goals, whether you want to lose weight, build muscle, or improve your overall health. Our facility offers state-of-the-art equipment, professional coaches, and a motivating atmosphere. We believe that fitness is not just a hobby, but a lifestyle.
                    </p>
                    <div class="p-3 bg-light rounded border-start border-4 border-warning mb-4">
                        <h5 class="fw-bold m-0">Opening Hours:</h5>
                        <p class="m-0 text-muted">Daily: 06:00 am - 11:00 pm</p>
                    </div>
                    <a href="@Url.Action("Login", "User")" class="btn btn-dark btn-lg px-4 rounded-pill">Start Training</a>
                </div>
            </div>
        </div>
    </section>

    <section id="programs" class="programs-section py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold display-5">Our Programs</h2>
                <p class="text-muted fs-5">Expert coaching, modern equipment, and diverse classes.</p>
            </div>

            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card shadow h-100">
                        <img src="https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3" class="card-img-top" alt="Personal Training">
                        <div class="card-body text-center pt-0">
                            <div class="icon mb-3">
                                <img src="https://images.unsplash.com/photo-1583454110551-21f2fa2afe61?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3" alt="Icon" class="rounded-circle">
                            </div>
                            <h4 class="card-title fw-bold">Personal Training</h4>
                            <p class="card-text text-muted">Get 1-on-1 coaching tailored to your specific body type and fitness goals.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow h-100">
                        <img src="https://images.unsplash.com/photo-1518611012118-696072aa579a?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3" class="card-img-top" alt="Group Classes">
                        <div class="card-body text-center pt-0">
                            <div class="icon mb-3">
                                <img src="https://images.unsplash.com/photo-1599058945522-28d584b6f0ff?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.0.3" alt="Icon" class="rounded-circle">
                            </div>
                            <h4 class="card-title fw-bold">Group Classes</h4>
                            <p class="card-text text-muted">Join our Yoga, Kickboxing, Pilates, and HIIT sessions to stay motivated with others.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow h-100">
                        <img src="https://images.unsplash.com/photo-1534438327276-14e5300c3a48?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3" class="card-img-top" alt="Strength & Cardio">
                        <div class="card-body text-center pt-0">
                            <div class="icon mb-3">
                                <img src="https://images.unsplash.com/photo-1595078475328-1ab05d0a6a0e?q=80&w=2000&auto=format&fit=crop&ixlib=rb-4.0.3" alt="Icon" class="rounded-circle">
                            </div>
                            <h4 class="card-title fw-bold">Strength & Cardio</h4>
                            <p class="card-text text-muted">Access the latest weightlifting machines and cardio equipment for a full workout.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>