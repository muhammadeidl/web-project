@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
    }

    /* HERO */
    .hero-section {
        height: 100vh;
        background-image: url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3');
        background-size: cover;
        background-position: center;
        color: white;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

        .hero-section .overlay {
            position: absolute;
            inset: 0;
            background-color: rgba(0, 0, 0, 0.6);
        }

    /* WHY SECTION */
    .why-section {
        background: #ffffff;
    }

    .why-card {
        border: 1px solid rgba(0,0,0,0.08);
        border-radius: 16px;
        padding: 22px;
        height: 100%;
        transition: transform .2s ease, box-shadow .2s ease;
        background: linear-gradient(135deg, #ffffff 0%, #f7f9fc 60%, #eef5ff 100%);
    }

        .why-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 14px 35px rgba(0,0,0,0.12);
        }

    .why-icon {
        width: 54px;
        height: 54px;
        border-radius: 14px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: rgba(255,193,7,0.16);
        color: #b8860b;
        font-size: 22px;
    }

    /* ABOUT */
    .about-us-section img {
        width: 100%;
        border-radius: 16px;
        object-fit: cover;
    }

    /* PROGRAMS */
    .programs-section .card {
        border: none;
        transition: transform 0.3s;
        border-radius: 16px;
        overflow: hidden;
    }

        .programs-section .card:hover {
            transform: translateY(-5px);
        }

    .programs-section img.card-img-top {
        height: 220px;
        object-fit: cover;
    }

    .programs-section .icon {
        margin-top: -60px;
        position: relative;
        z-index: 10;
    }

        .programs-section .icon img {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border: 5px solid white;
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
            background-color: white;
        }
</style>

<!-- HERO -->
<section class="hero-section text-light">
    <div class="overlay"></div>

    <div class="container position-relative">
        <h1 class="display-3 fw-bold text-uppercase">Build Your Dream Physique..</h1>
        <p class="lead fs-4 mb-4">Join the city's premier fitness center suitable for all levels.</p>

        @if (User?.Identity?.IsAuthenticated == false)
        {
            <a asp-area="Identity" asp-page="/Account/Login"
               class="btn btn-warning btn-lg text-white fw-bold px-5 rounded-pill">
                Join Now!
            </a>
        }
        else
        {
            <a asp-controller="Appointment" asp-action="Create"
               class="btn btn-warning btn-lg text-white fw-bold px-5 rounded-pill">
                Join Now!
            </a>
        }
    </div>
</section>

<!-- WHY IRONFIT -->
<section id="why" class="why-section py-5">
    <div class="container py-2">
        <div class="text-center mb-5">
            <h2 class="fw-bold display-6 mb-2">Why Choose IRONFIT?</h2>
            <p class="text-muted fs-5 m-0">Everything you need to train smarter and achieve real progress.</p>
        </div>

        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <div class="why-card">
                    <div class="why-icon mb-3">
                        <i class="fas fa-dumbbell"></i>
                    </div>
                    <h5 class="fw-bold mb-2">Professional Coaches</h5>
                    <p class="text-muted m-0">
                        Certified trainers help you train safely and efficiently with real guidance.
                    </p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="why-card">
                    <div class="why-icon mb-3">
                        <i class="fas fa-robot"></i>
                    </div>
                    <h5 class="fw-bold mb-2">AI Training Assistant</h5>
                    <p class="text-muted m-0">
                        Smart recommendations tailored to your body, goals, and progress.
                    </p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="why-card">
                    <div class="why-icon mb-3">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <h5 class="fw-bold mb-2">Easy Appointment Booking</h5>
                    <p class="text-muted m-0">
                        Book sessions quickly with coaches & programs — no hassle.
                    </p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="why-card">
                    <div class="why-icon mb-3">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <h5 class="fw-bold mb-2">Proven Results</h5>
                    <p class="text-muted m-0">
                        Structured plans + consistency = real transformations over time.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ABOUT US -->
<section id="about" class="about-us-section py-5 bg-light">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-lg-6">
                <img src="https://img.freepik.com/premium-photo/man-training-gym_1062339-3.jpg"
                     alt="IRONFIT About" class="shadow-sm">
            </div>

            <div class="col-lg-6">
                <h2 class="fw-bold mb-3 display-6">About <span class="text-warning">IRONFIT</span></h2>

                <p class="text-secondary lead mb-4">
                    We help you achieve your fitness goals: lose weight, build muscle, and improve overall health.
                    At IRONFIT you get modern equipment, professional coaches, and a strong motivating atmosphere.
                </p>

                <div class="p-3 bg-white rounded-4 border-start border-4 border-warning shadow-sm mb-4">
                    <h6 class="fw-bold m-0">Opening Hours</h6>
                    <div class="text-muted">Daily: 06:00 AM - 11:00 PM</div>
                </div>

                @if (User?.Identity?.IsAuthenticated == false)
                {
                    <a asp-area="Identity" asp-page="/Account/Login"
                       class="btn btn-dark btn-lg px-4 rounded-pill">
                        Start Training
                    </a>
                }
                else
                {
                    <a asp-controller="Appointment" asp-action="Create"
                       class="btn btn-dark btn-lg px-4 rounded-pill">
                        Start Training
                    </a>
                }
            </div>
        </div>
    </div>
</section>

<!-- PROGRAMS -->
<section id="programs" class="programs-section py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold display-6">Our Programs</h2>
            <p class="text-muted fs-5">Expert coaching, modern equipment, and diverse classes.</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card shadow h-100">
                    <img src="https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3"
                         class="card-img-top" alt="Personal Training">
                    <div class="card-body text-center pt-0">
                        <div class="icon mb-3">
                            <img src="https://images.unsplash.com/photo-1583454110551-21f2fa2afe61?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3"
                                 alt="Icon" class="rounded-circle">
                        </div>
                        <h4 class="card-title fw-bold">Personal Training</h4>
                        <p class="card-text text-muted">
                            Get 1-on-1 coaching tailored to your body type and fitness goals.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow h-100">
                    <img src="https://images.unsplash.com/photo-1518611012118-696072aa579a?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3"
                         class="card-img-top" alt="Group Classes">
                    <div class="card-body text-center pt-0">
                        <div class="icon mb-3">
                            <img src="https://images.unsplash.com/photo-1599058945522-28d584b6f0ff?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.0.3"
                                 alt="Icon" class="rounded-circle">
                        </div>
                        <h4 class="card-title fw-bold">Group Classes</h4>
                        <p class="card-text text-muted">
                            Yoga, Kickboxing, Pilates, HIIT — stay motivated with others.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow h-100">
                    <img src="https://images.unsplash.com/photo-1534438327276-14e5300c3a48?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3"
                         class="card-img-top" alt="Strength & Cardio">
                    <div class="card-body text-center pt-0">
                        <div class="icon mb-3">
                            <img src="https://images.unsplash.com/photo-1595078475328-1ab05d0a6a0e?q=80&w=2000&auto=format&fit=crop&ixlib=rb-4.0.3"
                                 alt="Icon" class="rounded-circle">
                        </div>
                        <h4 class="card-title fw-bold">Strength & Cardio</h4>
                        <p class="card-text text-muted">
                            Latest weight machines and cardio equipment for full workouts.
                        </p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
